<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%method - %msg%n</pattern>
        </encoder>
    </appender>


    <!-- <appender name="Suppress" class="org.docx4j.openpackaging"/> -->
    <logger name="org.docx4j" level="WARN"/>
    <logger name="org.pptx4j" level="WARN"/>

    <!-->
    <logger name="inosion" level="debug" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    -->

    <root level="debug">
        <appender-ref ref="CONSOLE"/>
    </root>


</configuration>
